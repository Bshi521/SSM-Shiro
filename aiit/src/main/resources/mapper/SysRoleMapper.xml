<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aiit.dao.SysRoleDao">
    <select id="listSysRolesByUserName"  parameterType="string" resultType="SysRole">
        select r.id, r.role_name from sys_user u
                                     left join sys_user_role ur
                                               on u.id = ur.uid
                                     left join sys_role r
                                               on r.id = ur.rid
        where u.username = #{0}
    </select>
</mapper>
