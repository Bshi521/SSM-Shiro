<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aiit.dao.SysPermissionDao">
    <select id="listSysPermissionsByUserName"  parameterType="string" resultType="SysPermission">
        select p.id, p.permission_name from sys_user u
                                     left join sys_user_role ru
                                               on u.id = ru.uid left
                                         join sys_role r
                                              on r.id = ru.rid
                                     left join sys_role_permission rp
                                               on r.id = rp.rid
                                     left join sys_permission p
                                               on p.id = rp.pid
        where u.username =#{0}
    </select>
</mapper>
